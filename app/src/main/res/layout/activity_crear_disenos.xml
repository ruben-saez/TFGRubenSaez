<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="Disenos.CrearDisenos">

    <View
        android:id="@+id/menuArriba"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="#142b53"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Disenos.CustomView
        android:id="@+id/custom_view"
        android:layout_width="0dp"
        android:layout_height="567dp"
        android:layout_marginTop="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuArriba"
        app:layout_constraintVertical_bias="0.043" />

    <TextView
        android:id="@+id/TItulo2"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/abril_fatface"
        android:text="CAMISEA"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@+id/menuArriba"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/backgroundColorSpinner"
        android:layout_width="114dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <Spinner
        android:id="@+id/paintColorSpinner"
        android:layout_width="114dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <ImageView
        android:id="@+id/guardar_btn"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuArriba"
        app:srcCompat="@drawable/save" />

    <ImageButton
        android:id="@+id/circuloBtn"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="4dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/guardar_btn"
        app:layout_constraintTop_toBottomOf="@+id/menuArriba"
        app:srcCompat="@drawable/circulob" />

    <ImageButton
        android:id="@+id/rectanguloBtn"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="4dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/circuloBtn"
        app:layout_constraintTop_toBottomOf="@+id/menuArriba"
        app:srcCompat="@drawable/rectangulo" />

    <ImageButton
        android:id="@+id/lineaBtn"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="4dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/rectanguloBtn"
        app:layout_constraintTop_toBottomOf="@+id/menuArriba"
        app:srcCompat="@drawable/linearecta" />

    <ImageButton
        android:id="@+id/borrarBtn"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="4dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/lineaBtn"
        app:layout_constraintTop_toBottomOf="@+id/menuArriba"
        app:srcCompat="@drawable/linearecta" />

    <ImageButton
        android:id="@+id/grosorBtn2"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="1dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/grosorBtn"
        app:layout_constraintTop_toBottomOf="@+id/menuArriba"
        app:srcCompat="@drawable/flechaabajo" />

    <ImageButton
        android:id="@+id/grosorBtn"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="1dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuArriba"
        app:srcCompat="@drawable/flechaarriba" />

    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="#142b53"
        app:layout_constraintBottom_toTopOf="@+id/custom_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="#142b53"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom_view" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>