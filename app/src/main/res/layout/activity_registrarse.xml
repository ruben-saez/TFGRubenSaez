<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoprueba5"
    tools:context=".registro.Registrarse">
    <FrameLayout
        android:id="@+id/menuDesplegable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#80000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <Button
                    android:id="@+id/btnOpcion1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mis diseños"
                    android:background="#142b53"
                    android:padding="16dp"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"/>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <Button
                    android:id="@+id/btnOpcion2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Crear diseño"
                    android:background="#142b53"
                    android:padding="16dp"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"/>

            </androidx.cardview.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <Button
                    android:id="@+id/btnOpcion5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pedidos"
                    android:background="#142b53"
                    android:padding="16dp"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"/>

            </androidx.cardview.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
               />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <Button
                    android:id="@+id/btnOpcion3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Importar diseños de galeria"
                    android:background="#142b53"
                    android:padding="16dp"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"/>

            </androidx.cardview.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
               />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <Button
                    android:id="@+id/btnOpcion4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Podemos ayudarle?"
                    android:background="#142b53"
                    android:padding="16dp"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </FrameLayout>

    <View
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#142b53"
        android:alpha="0.5"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuArriba" />

    <View
        android:id="@+id/menuArriba"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginEnd="2dp"
        android:background="#142b53"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/menuArriba3"
        android:layout_width="0dp"
        android:layout_height="79dp"
        android:background="#142b53"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <GridView
        android:id="@+id/gridView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:horizontalSpacing="8dp"
        android:numColumns="2"
        android:padding="8dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="8dp"
        app:layout_constraintBottom_toTopOf="@+id/menuArriba3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="116dp"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/misDisenos"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="15sp"
        android:text="Mis diseños"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/menuArriba3" />

    <Button
        android:id="@+id/Crear"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:textSize="15sp"
        android:text="Crear diseño"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/menuArriba3" />

    <ImageButton
        android:id="@+id/avatarUsuario"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/layout_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuArriba"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/TItulo2"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/abril_fatface"
        android:text="CAMISEA"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/MenuDes"
        android:layout_width="55dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:srcCompat="@drawable/menu" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="86dp"
        android:layout_height="70dp"
        android:layout_gravity="start"
        android:layout_marginTop="-4dp"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TItulo2"
        app:srcCompat="@drawable/logosinfondo" />

</androidx.constraintlayout.widget.ConstraintLayout>
    </layout>