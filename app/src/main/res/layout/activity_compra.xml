<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoprueba5"
    tools:context="ComprarVenta.Compra">
    <View
        android:id="@+id/view7"
        android:layout_width="408dp"
        android:layout_height="0dp"
        android:background="#142b53"
        android:alpha="0.4"
        app:layout_constraintBottom_toTopOf="@+id/view6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fondoCamiseta" />

    <ImageView
        android:id="@+id/fondoCamiseta"
        android:layout_width="0dp"
        android:layout_height="428dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondoca30" />

    <ImageView
        android:id="@+id/ImagenCompra"
        android:layout_width="148dp"
        android:layout_height="210dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/camiseta"
        android:layout_width="352dp"
        android:layout_height="430dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Spinner
        android:id="@+id/spinnerColor"
        android:layout_width="126dp"
        android:layout_height="27dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="20dp"

        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camiseta" />

    <Spinner
        android:id="@+id/spinnerMaterial"
        android:layout_width="126dp"
        android:layout_height="27dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="22dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerColor" />

    <Spinner
        android:id="@+id/spinnerTallas"
        android:layout_width="126dp"
        android:layout_height="27dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="22dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerMaterial" />

    <Spinner
        android:id="@+id/spinnerImpresion"
        android:layout_width="126dp"
        android:layout_height="27dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="22dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerTallas" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="81dp"
        android:layout_height="27dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="Color:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camiseta" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="81dp"
        android:layout_height="27dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="22dp"
        android:text="Material:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="81dp"
        android:layout_height="27dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="22dp"
        android:text="Talla:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="81dp"
        android:layout_height="27dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="22dp"
        android:text="Impresión:"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/ImportarIma"
        android:layout_width="128dp"
        android:layout_height="62dp"
        android:layout_marginTop="396dp"
        android:layout_marginEnd="16dp"
        android:elevation="10000dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:text="Importar de galería"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="#142b53"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fondoCamiseta" />


    <View
        android:id="@+id/view6"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginTop="22dp"
        android:background="#142b53"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerImpresion" />

    <View
        android:id="@+id/view3"
        android:layout_width="214dp"
        android:layout_height="5dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="11dp"
        android:background="#142b53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerColor" />

    <View
        android:id="@+id/view4"
        android:layout_width="214dp"
        android:layout_height="5dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="11dp"
        android:background="#142b53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerMaterial" />

    <View
        android:id="@+id/view5"
        android:layout_width="214dp"
        android:layout_height="5dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="11dp"
        android:background="#142b53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerTallas" />

    <TextView
        android:id="@+id/precioCamiseta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="32dp"
        android:text="18,99$"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImportarIma" />

    <Button
        android:id="@+id/compra"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="138dp"
        android:text="COMPRAR"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view6" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>